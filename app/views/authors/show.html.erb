<div class="page-header">
  <h3>Author #<%= @author.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/authors" class="btn btn-primary">
        Back
      </a>
      <a href="/authors/<%= @author.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_author/<%= @author.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Author has many sources -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Sources
      </li>

      <% @author.sources.each do |source| %>
        <li class="list-group-item">
          <a href="/sources/<%= source.id %>">
            <%= source.author_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/sources/<%= source.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/sources/<%= source.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_source/<%= source.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_source" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for author_id -->
      <input type="hidden" name="author_id" value="<%= @author.id %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="">
      </div>

      <!-- Label and input for url -->
      <div class="form-group">
        <label for="url" class="control-label">
          Url
        </label>

        <input type="text" id="url" name="url" placeholder="Url" class="form-control" value="">
      </div>

      <!-- Label and input for indicator_id -->
      <div class="form-group">
        <label for="indicator_id" class="control-label">
          Indicator
        </label>

        <%= select_tag(:indicator_id, options_from_collection_for_select(Indicator.all, :id, :name), :class => "form-control") %>
      </div>

      <button class="btn btn-block btn-success">
        Create Source
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Author has many indicators -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Indicators
      </li>

      <% @author.indicators.each do |indicator| %>
        <li class="list-group-item">
          <a href="/indicators/<%= indicator.id %>">
            <%= indicator.name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/indicators/<%= indicator.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/indicators/<%= indicator.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_indicator/<%= indicator.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
