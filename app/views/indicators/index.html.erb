<div class="page-header">
  <h1>
    Indicators
    <a href="/indicators/new" class="btn btn-lg btn-success">New Indicator</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Expected sign</th>
        <th>Database key</th>
        <th>Actions</th>
      </tr>

      <% @indicators.each do |indicator| %>
      <tr>
        <td><%= indicator.name %></td>
        <td><%= indicator.description %></td>
        <td><%= indicator.expected_sign %></td>
        <td><%= indicator.database_key %></td>
        <td>
          <a href="/indicators/<%= indicator.id %>" class="btn btn-primary">Show</a>
          <a href="/indicators/<%= indicator.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_indicator/<%= indicator.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
