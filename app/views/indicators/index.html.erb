<div class="page-header">
  <h1>
    Indicators
    <a href="/indicators/new" class="btn btn-lg btn-success">New Indicator</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "indicators_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
    <%= f.label :database_key_cont, "Database key contains" %>
    <%= f.text_field :database_key_cont, :class => "form-control", :placeholder => "Database key contains" %>
  </div>

<div class="form-group">
  <%= f.label :expected_sign, "Expected sign" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :expected_sign_gteq, :class => "form-control", :placeholder => "Expected sign greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :expected_sign_lteq, :class => "form-control", :placeholder => "Expected sign less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "Author Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='authorsgteqcreated_atPicker'>
                  <%= f.text_field :authors_created_at_gteq, :class => "form-control", :placeholder => "Author Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='authorslteqcreated_atPicker'>
                  <%= f.text_field :authors_created_at_lteq, :class => "form-control", :placeholder => "Author Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#authorsgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#authorslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#authorsgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#authorslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#authorslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#authorsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
      <%= f.label :ourmodels_model_weight_cont, "Ourmodel model_weight contains" %>
      <%= f.text_field :ourmodels_model_weight_cont, :class => "form-control", :placeholder => "Ourmodel model_weight contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/indicators" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#indicators_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Expected sign</th>
        <th>Database key</th>
        <th>Actions</th>
      </tr>

      <% @indicators.each do |indicator| %>
      <tr>
        <td><%= indicator.name %></td>
        <td><%= indicator.description %></td>
        <td><%= indicator.expected_sign %></td>
        <td><%= indicator.database_key %></td>
        <td>
          <a href="/indicators/<%= indicator.id %>" class="btn btn-primary">Show</a>
          <a href="/indicators/<%= indicator.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_indicator/<%= indicator.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @indicators, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
