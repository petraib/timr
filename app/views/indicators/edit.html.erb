<!-- Validation failure messages -->
<% if @indicator.errors.any? %>
  <% @indicator.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Indicator #<%= @indicator.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_indicator/<%= @indicator.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @indicator.name %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @indicator.description %>">
      </div>

      <!-- Label and input for expected_sign -->
      <div class="form-group">
        <label for="expected_sign" class="control-label">
          Expected sign
        </label>

        <input type="text" id="expected_sign" name="expected_sign" placeholder="Expected sign" class="form-control" value="<%= @indicator.expected_sign %>">
      </div>

      <!-- Label and input for database_key -->
      <div class="form-group">
        <label for="database_key" class="control-label">
          Database key
        </label>

        <input type="text" id="database_key" name="database_key" placeholder="Database key" class="form-control" value="<%= @indicator.database_key %>">
      </div>

      <button class="btn btn-warning">
        Update Indicator
      </button>
      or
      <a href="/indicators/<%= @indicator.id %>">Cancel</a>
    </form>
  </div>
</div>
