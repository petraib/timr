<div class="page-header">
  <h1>
    Models
    <a href="/models/new" class="btn btn-lg btn-success">New Model</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @models.each do |model| %>
      <tr>
        <td><%= model.user.email %></td>
        <td>
          <a href="/models/<%= model.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == model.user %>
            <a href="/models/<%= model.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_model/<%= model.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
