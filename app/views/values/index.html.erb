<div class="page-header">
  <h1>
    Values
    <a href="/values/new" class="btn btn-lg btn-success">New Value</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Indicator</th>
        <th>Date</th>
        <th>Value</th>
        <th>Actions</th>
      </tr>

      <% @values.each do |value| %>
      <tr>
        <td>
          <% if value.indicator.present? %>
            <a href="/indicators/<%= value.indicator.id %>">
              <%= value.indicator.name %>
            </a>
          <% end %>
        </td>
        <td><%= value.date %></td>
        <td><%= value.value %></td>
        <td>
          <a href="/values/<%= value.id %>" class="btn btn-primary">Show</a>
          <a href="/values/<%= value.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_value/<%= value.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @values, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
